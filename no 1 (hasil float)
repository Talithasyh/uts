#include <iostream>
using namespace std;

int main() {
    int n;
    float rumus,jumlah,total;
    
    cout << "masukan n : ";
    cin >> n;
    
    jumlah=0;
    total=0;
    rumus=-1;
    for(int a=1; a<=n; a++){
    rumus=(rumus*(-1));
    total=rumus/a;
    jumlah= jumlah + total;
    if(a==1)
    cout<<"("<<total<<")";
    if(a>1)
    cout<<"+("<<total<<")";
    }
    cout << "\nHasil perhitungan fungsi : " << jumlah;
} 
